<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="resources/css/normalize.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Poppins:wght@100;200;300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="resources/css/login.css">
    <title>Login</title>
</head>
<body>

    <header class="header-container">
        <h1>DigitalBank</h1>
        <a href="/register">Register</a>
    </header>

    <div class="login-form-container">
        <h2>Login</h2>
        <form action="/login" method="POST">
            <div>
                <input type="text" name="email" placeholder="Email">
                <% if(typeof validations != 'undefined') { %>
                    <% validations.forEach((validation) => { %>
                        <% if(validation.param == 'email') {%>
                            <div class="error-message">
                                <p><%= validation.msg %></p>
                            </div>
                        <% }%>
                    <% })%>
                <% } %>
            </div>
            <div>
                <input type="password" name="password" placeholder="Password">
                <% if(typeof validations != 'undefined') { %>
                    <% validations.forEach((validation) => { %>
                        <% if(validation.param == 'password') {%>
                            <div class="error-message">
                                <p><%= validation.msg %></p>
                            </div>
                        <% }%>
                    <% })%>
                <% } %>
            </div>
            <% if(typeof invalidEmailOrPassword !== 'undefined') { %>
                <div class="error-message">
                    <p>Invalid Email or Password</p>
                </div>
            <% } %>
            <input class="submitBtn" type="submit" value="Log in">
        </form>
    </div>

    <div class="filler">
        <a href="/">Need help?</a>
        <a href="/">Forgot my password</a>
    </div>
</body>
</html>