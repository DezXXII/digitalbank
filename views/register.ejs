<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=yes">
    <link rel="stylesheet" href="resources/css/normalize.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Poppins:wght@100;200;300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="resources/css/register.css">
    <title>Register</title>
</head>
<body>
    <header class="header-container">
        <h1>DigitalBank</h1>
        <a href="/login">Login</a>
    </header>
    
    <section class="register-form-container">
        <h2>Create your account</h2>
        <form action="register" method="POST">
            <div class="input-container">
                <input id="firstname" type="text" name="firstname" placeholder="Firstname">
                <% if(typeof validations != 'undefined') { %>
                    <% validations.forEach((validation) => { %>
                        <% if(validation.param == 'firstname') {%>
                            <div class="error-message">
                                <p><%= validation.msg %></p>
                            </div>
                        <% }%>
                    <% })%>
                <% } %>
            </div>
            <div class="input-container">
                <input id="lastname" type="text" name="lastname" placeholder="Lastname">
                <% if(typeof validations != 'undefined') { %>
                    <% validations.forEach((validation) => { %>
                        <% if(validation.param == 'lastname') {%>
                            <div class="error-message">
                                <p><%= validation.msg %></p>
                            </div>
                        <% }%>
                    <% })%>
                <% } %>
            </div>
            <div class="input-container">
                <input id="email" type="email" name="email" placeholder="Email">
                <% if(typeof validations != 'undefined') { %>
                    <% validations.forEach((validation) => { %>
                        <% if(validation.param == 'email') {%>
                            <div class="error-message">
                                <p><%= validation.msg %></p>
                            </div>
                        <% }%>
                    <% })%>
                <% } %>
                <% if(typeof alreadyUsedEmail !== 'undefined') { %>
                    <div class="error-message">
                        <p>Email already in use</p>
                    </div>
                <% } %>
            </div>
            <div class="input-container">
                <input id="password" type="password" name="password" placeholder="Password">
                <% if(typeof validations != 'undefined') { %>
                    <% validations.forEach((validation) => { %>
                        <% if(validation.param == 'password') {%>
                            <div class="error-message">
                                <p><%= validation.msg %></p>
                            </div>
                        <% }%>
                    <% })%>
                <% } %>
            </div>
            <input id="submitBtn" class="submitBtn" type="submit" value="Create">
        </form>
    </section>

    <div class="filler">
        <a href="/">Need help?</a>
    </div>

    <script src="../resources/scripts.js"></script>
</body>
</html>